<body>
  <form action='/transaction/<%= @transaction['id'] %>/edit' method='post'>
      <label for="amount">Amount:</label>
      <input type="text" name="amount" placeholder='0.00' value='<%= @transaction['amount'] %>' required />

      <label for="memo">Memo:</label>
      <input type="text" name="memo" placeholder='memo' value='<%= @transaction['memo'] %>'/>

      <label for="category">Category:</label>
      <select name="category_id">
        <% @categories.each do |category| %>
          <% if category.id == @transaction['category_id'] %>
            <option value='<%= category.id %>' selected><%= category.name %></option>
          <% else %>
            <option value='<%= category.id %>'><%= category.name %></option>
          <% end %>
        <% end %>
      </select>

      <label for="account">Account:</label>
      <select name="account_id">
        <% @accounts.each do |account| %>
          <% if account.id == @transaction['account_id'] %>
            <option value='<%= account.id %>' selected><%= account.name %></option>
          <% else %>
            <option value='<%= account.id %>'><%= account.name %></option>
          <% end %>
        <% end %>
      </select>

      <label for="date">Date:</label>
      <input type="date" name="date" value='<%= params['date'] || @transaction['date'] %>' max='<%= Date.today.to_s %>'required>

    <input type="submit" value="Submit" />
    <a href='/budget'>Cancel</a>
  </form>
</body>